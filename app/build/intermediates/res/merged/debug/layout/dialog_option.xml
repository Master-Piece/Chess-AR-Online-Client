<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="net.ddns.frebern.chessaronline.OptionDialog"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:paddingBottom="16dp"
    android:background="@drawable/border2"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recognized Voice : "
        android:textColor="#000000"
        android:id="@+id/srLabel"
        android:layout_gravity="left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="Confirm"
        android:textColor="#000000"
        android:id="@+id/srVoice"
        android:layout_gravity="left"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:paddingRight="20dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/app_icon"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/border1"
                    android:layout_gravity="center">

                    <RadioGroup
                        android:id="@+id/optSound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="16dp"
                        android:orientation="vertical" >

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MAX"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="6pt"
                            android:buttonTint="#ffff00"
                            android:id="@+id/volMax" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="High"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="6pt"
                            android:buttonTint="#ffff00"
                            android:id="@+id/volHigh" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medium"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="6pt"
                            android:buttonTint="#ffff00"
                            android:id="@+id/volMedium" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Low"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="6pt"
                            android:buttonTint="#ffff00"
                            android:id="@+id/volLow" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mute"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="6pt"
                            android:buttonTint="#ffff00"
                            android:id="@+id/volMute" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/app_icon" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:id="@+id/optCard">

                        <ImageView
                            android:layout_width="108dp"
                            android:layout_height="64dp"
                            android:background="@drawable/app_banner"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Card"
                            android:textStyle="bold"
                            android:textSize="8pt"
                            android:textColor="#000000"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:id="@+id/optFull">

                        <ImageView
                            android:layout_width="108dp"
                            android:layout_height="64dp"
                            android:background="@drawable/app_banner"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full"
                            android:textStyle="bold"
                            android:textSize="8pt"
                            android:textColor="#000000"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/app_icon"/>

                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border1"
                        android:text="Voice Confirm\n(Toggle)"
                        android:textColor="#000000"
                        android:textSize="7pt"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="12dp"
                        android:thumbTint="#ffff22"
                        android:trackTint="#000000"
                        android:trackTintMode="multiply"
                        android:checked="true"
                        android:id="@+id/optVoiceConfirm" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="right">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:id="@+id/optSave" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:id="@+id/optCancel" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
